{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES6",
    "baseUrl": ".",
    "moduleResolution": "node",
    "types": ["node", "mocha"],
    "declaration": true,
    "outDir": "./dist",
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"]
}